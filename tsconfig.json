{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "strict": true,
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
